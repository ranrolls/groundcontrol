<h1>Editing tester</h1>

<%= error_messages_for :tester %>

<% form_for(@tester) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Code</b><br />
    <%= f.text_area :code %>
  </p>

  <p>
    <b>Project</b><br />
    <%= f.text_field :project_id %>
  </p>

  <p>
    <b>Active flag</b><br />
    <%= f.text_field :active_flag %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @tester %> |
<%= link_to 'Back', testers_path %>
