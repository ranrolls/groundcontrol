<h1>Listing testers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Code</th>
    <th>Project</th>
    <th>Active flag</th>
  </tr>

<% for tester in @testers %>
  <tr>
    <td><%=h tester.name %></td>
    <td><%=h tester.description %></td>
    <td><%=h tester.code %></td>
    <td><%=h tester.project_id %></td>
    <td><%=h tester.active_flag %></td>
    <td><%= link_to 'Show', tester %></td>
    <td><%= link_to 'Edit', edit_tester_path(tester) %></td>
    <td><%= link_to 'Destroy', tester, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tester', new_tester_path %>
