<h1>Roles</h1>

<table class="data long">
	<tr>
		<th>Role</th>
		<th>Hosts</th>
		<th>Pages</th>
	</tr>
	
<% for role in @roles %>
  <tr>
    <td><%= link_to role.role, role %></td>
    <td><%= role.hosts.count %></td>
    <td><%= role.pages.count %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Role', new_role_path %>
