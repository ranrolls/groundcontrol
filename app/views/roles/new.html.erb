<h1>New role</h1>

<%= error_messages_for :role %>

<% form_for(@role) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Klass</b><br />
    <%= f.text_field :klass %>
  </p>

  <p>
    <b>Code</b><br />
    <%= f.text_area :code %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', roles_path %>
